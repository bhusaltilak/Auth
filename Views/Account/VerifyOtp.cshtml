@{
    ViewBag.Title = "Verify OTP";
}

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4" style="width: 400px;">
        <h2 class="text-center mb-4">Verify OTP</h2>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }

        <form method="post">
            <div class="mb-3 input-group">
                <span class="input-group-text"><i class="fas fa-key"></i></span>
                <input type="text" name="otp" required class="form-control" placeholder="Enter OTP" />
            </div>

            <button type="submit" class="btn btn-success w-100">Verify</button>

            <div class="text-center mt-3">
                <p>Didn’t receive OTP? <a href="/Account/Register" class="text-primary">Resend</a></p>
            </div>
        </form>
    </div>
</div>

<!-- Bootstrap & Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
