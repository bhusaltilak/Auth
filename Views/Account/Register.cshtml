@if (ViewBag.GeneralError != null)
{
    <p class="text-danger">@ViewBag.GeneralError</p>
}

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4" style="width: 400px;">
        <h2 class="text-center mb-4">Register</h2>

<form method="post">
            @if (ViewBag.EmailError != null)
            {
                <p class="text-danger">@ViewBag.EmailError</p>
            }


    <div class="mb-3 input-group">
        <span class="input-group-text"><i class="fas fa-user"></i></span>
                <input type="text" name="fullName" value="@ViewBag.FullName" required class="form-control" placeholder="Full Name" />
    </div>



    <div class="mb-3 input-group">
        <span class="input-group-text"><i class="fas fa-phone"></i></span>
        <input type="text" name="phone" value="@ViewBag.Phone" required class="form-control" placeholder="Phone " />
    </div>


    <div class="mb-3 input-group">
        <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                <input type="email" name="email" value="@ViewBag.Email" required class="form-control" placeholder="Email" />
       
    </div>

    <div class="mb-3 input-group">

        <span class="input-group-text"><i class="fas fa-lock"></i></span>
                <input type="password" name="password" value="@ViewBag.Password" required class="form-control" placeholder="Password" />
    </div>

            <div class="d-flex justify-content-between">
              <button type="submit" class="btn btn-primary w-100">Register</button>
              </div>


            <div class="text-center mt-3">
                <p>Already have an account? <a href="/Account/Login" class="text-primary">Login</a></p>

            </div>
</form>
</div>
</div>

<!-- Bootstrap & Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
